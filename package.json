{
  "name": "phosphor-boxpanel",
  "version": "1.0.0-rc.0",
  "description": "A Phosphor layout panel which arranges its children into a single row or column.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "phosphor-arrays": "^1.0.6",
    "phosphor-boxengine": "^1.0.1",
    "phosphor-domutil": "^1.2.0",
    "phosphor-messaging": "^1.0.6",
    "phosphor-panel": "^1.0.0-rc.0",
    "phosphor-properties": "^2.0.0",
    "phosphor-widget": "^1.0.0-rc.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.4",
    "css-loader": "^0.23.1",
    "expect.js": "^0.3.1",
    "istanbul-instrumenter-loader": "^0.1.3",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "^0.5.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-ie-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.2.5",
    "rimraf": "^2.4.2",
    "style-loader": "^0.13.0",
    "typedoc": "^0.3.11",
    "typescript": "^1.6.2",
    "webpack": "^1.12.9"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf test/build && rimraf test/coverage",
    "clean:example": "rimraf example/bundle.js rimraf example/index.js && rimraf example/node_modules/phosphor-boxpanel",
    "build:example": "cd example && npm install && tsc && webpack --config ./webpack.conf.js",
    "build:src": "tsc --project src",
    "build:test": "tsc --project test/src && webpack --config test/webpack.conf.js",
    "build": "npm run build:src && npm run build:test",
    "docs": "rimraf docs/api && typedoc --options scripts/tdoptions.json",
    "postinstall": "npm dedupe",
    "prepublish": "npm run build",
    "test:chrome": "karma start --browsers=Chrome test/karma.conf.js",
    "test:coverage": "webpack --config test/webpack-cov.conf.js && karma start test/karma-cov.conf.js",
    "test:firefox": "karma start --browsers=Firefox test/karma.conf.js",
    "test:ie": "karma start --browsers=IE test/karma.conf.js",
    "test:debug": "karma start --browsers=Chrome --singleRun=false --debug=true test/karma.conf.js",
    "test": "npm run test:firefox"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phosphorjs/phosphor-boxpanel.git"
  },
  "files": [
    "lib/*.css",
    "lib/*.d.ts",
    "lib/*.js"
  ],
  "keywords": [
    "box",
    "boxlayout",
    "boxpanel",
    "layout",
    "panel",
    "ui",
    "widget"
  ],
  "author": "S. Chris Colbert <sccolbert@gmail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/phosphorjs/phosphor-boxpanel/issues"
  },
  "homepage": "https://github.com/phosphorjs/phosphor-boxpanel"
}
